<?xml version="1.0" encoding="UTF-8"?>

<assembly>
    <id>dist</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/config</directory>
            <outputDirectory>/standalone/deployconfig</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/config</directory>
            <outputDirectory>/standalone/tmp</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>*.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/jboss-modules</directory>
            <outputDirectory>/modules</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/standalone/releases</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>${project.groupId}:orgfeed-ear</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>${project.groupId}:orgfeed-ear</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
